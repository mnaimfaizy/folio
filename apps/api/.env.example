NODE_ENV=development
HOST=localhost
PORT=3000
JWT_SECRET=your_jwt_secret_key_here
RESET_PASSWORD_EXPIRY=3600000

# Auth token/session hardening
AUTH_ACCESS_TOKEN_EXPIRES_IN=24h
AUTH_REFRESH_TOKEN_EXPIRES_DAYS=30
AUTH_LOCKOUT_THRESHOLD=5
AUTH_LOCKOUT_MS=900000
AUTH_BACKOFF_BASE_MS=1000
AUTH_BACKOFF_MAX_MS=30000
AUTH_SECURITY_STATE_TTL_MS=86400000

# Set to true when the API is running inside Docker (enables mailhog hostname defaults)
RUNNING_IN_DOCKER=false

# UploadThing (book cover uploads)
# Create a token in UploadThing dashboard and set it here.
UPLOADTHING_TOKEN=

# Database (choose one approach)
# Option A: connection string
# DATABASE_URL=postgres://folio:folio@localhost:5432/folio

# Option B: discrete settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=folio
POSTGRES_USER=folio
POSTGRES_PASSWORD=folio

# SMTP / Email (Mailhog defaults)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=library@example.com
EMAIL_SERVICE=

# Legacy email env vars (some code paths still read these)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# Frontend URL
FRONTEND_URL=http://localhost:4200

# External book providers (admin imports)
GOOGLE_BOOKS_API_KEY=
ISBNDB_API_KEY=
ISBNDB_BASE_URL=https://api2.isbndb.com
WORLDCAT_WSKEY=
WORLDCAT_BASE_URL=
OPENLIBRARY_DEBUG=false